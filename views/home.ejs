<% include partials/header %>

<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= home.carouselImage1 %>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block mb-5">
          <h1>Our Mission</h1>
          <h3>We want to achieve the highest grade of coffee we can</h3>
        </div>
      </div>

      <div class="carousel-item">
        <img src="<%= home.carouselImage2 %>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block mb-5">
          <h1>Coffee On The Go</h1>
          <h3>Multiple flavors to choose from. Create your own art!</h3>
        </div>
      </div>
      
      <div class="carousel-item">
        <img src="<%= home.carouselImage3 %>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block mb-5">
          <h1>Visit Us</h1>
          <h3>Relax and have a cup of coffee in our store</h3>
        </div>
      </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container">
  <h1 class="section my-5">Find A Store Near You!</h1>
  <div class="row ml-auto mr-auto mb-5">
    <div class="col-md-4">
      <div class="card border-0 bg-transparent">
        <img src="<%= home.locationImage1 %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">San Francisco</h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 bg-transparent">
        <img src="<%= home.locationImage2 %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Los Angeles</h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 bg-transparent">
        <img src="<%= home.locationImage3 %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">New York City</h5>
        </div>
      </div>
    </div>
  </div>
  <hr> 
</div>

<div class="container">
  <h1 class="section my-5"">Customer Favorites</h1>
  <div class="row mb-5">
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%= home.coffeeImage1 %>" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">Cafe au lait</h5>
          <p class="card-text">Strong coffee made with scalded milk in a 1:1 ratio.</p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="card">
          <img src="<%= home.coffeeImage2 %>" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">Caffee Gommosa</h5>
          <p class="card-text">An espresso poured over a single marshmallow.</p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%= home.coffeeImage3 %>" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">Macchiato</h5>
          <p class="card-text">An espresso made with a small amount of foamed milk.</p>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%= home.coffeeImage4 %>" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">Espresso</h5>
          <p class="card-text">A brew method and coffee that is ground and packed.</p>
        </div>
      </div>
    </div>
  </div>

  <hr> 
</div>

